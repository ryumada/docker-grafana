# Copy to .env and replace placeholders with real secrets and configuration values.

# --- Shared Networking ---
OVERLAY_NETWORK_NAME=grafana

# --- Loki ---
LOKI_IMAGE=grafana/loki:3.4.1
LOKI_HTTP_PORT=3100
LOKI_NODE_CONSTRAINT=node.labels.role.loki == true
LOKI_REPLICAS=1
LOKI_GCS_SERVICE_ACCOUNT_JSON_B64=REPLACE_BASE64_JSON

# --- Mimir ---
MIMIR_IMAGE=grafana/mimir:2.12.0
MIMIR_HTTP_PORT=9009
MIMIR_NODE_CONSTRAINT=node.labels.role.mimir == true
MIMIR_REPLICAS=1
MIMIR_GCS_SERVICE_ACCOUNT_JSON_B64=REPLACE_BASE64_JSON

# --- Alertmanager ---
ALERTMANAGER_IMAGE=quay.io/prometheus/alertmanager:v0.27.0
ALERTMANAGER_HTTP_PORT=9093
ALERTMANAGER_NODE_CONSTRAINT=node.labels.role.alertmanager == true
ALERTMANAGER_REPLICAS=1
ALERTMANAGER_GOOGLE_CHAT_WEBHOOK_URL=https://chat.googleapis.com/v1/spaces/.../messages?key=...&token=...

# --- Grafana ---
GRAFANA_IMAGE=grafana/grafana:11.1.0
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me
GRAFANA_FEATURE_TOGGLES=unifiedAlerting
GRAFANA_DOMAIN=grafana.example.com
GRAFANA_NODE_CONSTRAINT=node.labels.role.grafana == true
GRAFANA_REPLICAS=1

# --- Traefik ---
TRAEFIK_IMAGE=traefik:v3.1
TRAEFIK_HTTP_PORT=80
TRAEFIK_HTTPS_PORT=443
TRAEFIK_INSECURE_ENTRYPOINT=web
TRAEFIK_SECURE_ENTRYPOINT=websecure
TRAEFIK_CERT_RESOLVER=letsencrypt
TRAEFIK_ACME_EMAIL=your-email@example.com
TRAEFIK_ACME_STORAGE=/letsencrypt/acme.json
TRAEFIK_NODE_CONSTRAINT=node.labels.role.proxy == true

# --- Alloy ---
ALLOY_IMAGE=grafana/alloy:v1.6.0
ALLOY_CLUSTER_NAME=primary
ALLOY_LOKI_ENDPOINT=http://loki:3100/loki/api/v1/push
ALLOY_MIMIR_REMOTE_WRITE_URL=http://mimir:9009/api/v1/push
ALLOY_NODE_CONSTRAINT=node.labels.role.alloy == true
