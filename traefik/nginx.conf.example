# Example host-level Nginx config that forwards HTTP/HTTPS traffic to the local Traefik instance.
# Adjust proxy_pass targets to match TRAEFIK_HTTP_PORT / TRAEFIK_HTTPS_PORT from your .env file.

server {
    listen 80;
    server_name monitoring.com;

    location / {
        proxy_pass http://127.0.0.1:TRAEFIK_HTTP_PORT; # replace with value from .env
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

server {
    listen 443 ssl http2;
    server_name monitoring.com;

    ssl_certificate     /etc/letsencrypt/live/monitoring.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/monitoring.com/privkey.pem;
    include             /etc/letsencrypt/options-ssl-nginx.conf;

    location / {
        proxy_pass https://127.0.0.1:TRAEFIK_HTTPS_PORT; # replace with value from .env
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
